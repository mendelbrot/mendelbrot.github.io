<div class="resume w-[8.5in] h-[11.0in] bg-white p-4 grid grid-cols-5 auto-rows-fr">
  
  <div class="col-span-2 row-span-2 border-r-2 border-slate-300 pr-4">
    <h1 class="text-4xl mb-4">{{data.contact.name}}</h1>
    <h2>{{data.contact.title}}</h2>
    <a class="flex content-center" href="{{data.contact.website}}">
      <img alt="website" class="object-contain h-5 w-5" src="/assets/icons/globe-web-slate-600.svg">
      <span class="ml-2">{{data.contact.website}}</span>
    </a>
  </div>

  <div class="col-span-3 row-span-2 pl-4">
    <h2>Summary</h2>
    <p>{{data.summary}}</p>
    <span class="material-symbols-outlined">search</span>
  </div>

  <div class="col-span-2 row-span-3 border-t-2 border-r-2 border-slate-300 pr-4">
    <h2>Skills</h2>
    <ul class="flex flex-wrap">
      {% for skill in data.skills %} 
      <li class="my-1 mr-2 py-1 px-2 border-2 border-slate-300 rounded-xl">{{skill}}</li>
      {% endfor %}
    </ul>
  </div>

  <div class="col-span-3 row-span-6 border-t-2 border-slate-300 pl-4">
    <h2>Experience</h2>
    {% for item in data.experience %} 
      <div class="mb-8">
        <div class="mb-4">
          <h3>{{item.companu}}</h3>
          <p>{{item.role}}</p>
          <p>{{item.dates}}</p>
          <p>{{item.location}}</p>
        </div>
        <ul class="px-4">
        {% for point in item.achievements %} 
          <li class="mb-2 flex">
            <div class="mr-2">&#x2022</div>
            <div>{{point}}</div>
          </li>
        {% endfor %}
      </ul>
      </div>
      
    {% endfor %}
  </div>

  <div class="col-span-2 row-span-3 border-t-2 border-r-2 border-slate-300 pr-4">
    <h2>Education</h2>
    {% for item in data.education %} 
    <div class="mb-4">
      <h3>{{item.school}}</h3>
      <p>{{item.program}}</p>
      <p>{{item.dates}}</p>
      <p>Grade: {{item.grade}}</p>
    </div>
    {% endfor %}
  </div>

</div>
