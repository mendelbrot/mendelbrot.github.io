<nav role="navigation">
  <ul class="flex flex-col sm:flex-row">
    {% for item in site.nav %}
      <li class="flex-initial text-2xl ml-4 hover:opacity-50 
      {% if item.path == page.url %}
      underline underline-offset-4
      {% endif %}
      ">
        <a href="{{ item.path }}">{{ item.label }}</a>
      </li>
    {% endfor %}
  </ul>
</nav>